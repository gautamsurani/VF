<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginLeft="@dimen/_50sdp"
    android:layout_marginRight="@dimen/_50sdp"
    android:orientation="vertical"
    android:background="#a7ffffff">

    <!-- <LinearLayout android:orientation="vertical" android:layout_marginLeft="20dp" 
        android:layout_marginRight="20dp" android:background="#95000056" android:layout_width="fill_parent" 
        android:layout_height="wrap_content"> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <customclass.MyTextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Exit Application"
            android:textColor="#595959"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_popup_NO"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="Cancel"
                android:theme="@style/AppTheme.Button"
                android:textAllCaps="false"
                android:textColor="@color/cattextcolour"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_popup_YES"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="@color/cattextcolour"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

